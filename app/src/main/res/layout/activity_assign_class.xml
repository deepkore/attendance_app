<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    tools:context=".AssignClassActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mainToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        app:title="Assign Class"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mainToolbar">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Search for faculty ID"
                    android:completionThreshold="1"
                    android:background="@drawable/textbox_gradient"/>

                <Spinner
                    android:id="@+id/spinnerStream"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/textbox_gradient"
                    android:hint="Select Stream"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp" />

                <Spinner
                    android:id="@+id/spinnerSemester"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/textbox_gradient"
                    android:hint="Select Semester"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp" />
                <Spinner
                    android:id="@+id/spinnerSection"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/textbox_gradient"
                    android:hint="Select Section"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp" />

                <Spinner
                    android:id="@+id/spinnerSubject"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/textbox_gradient"
                    android:hint="Select Subject"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnAssignClass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Assign Class"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:backgroundTint="@color/blue"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="40dp" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
