<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    tools:context=".AddStudentActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mainToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:minHeight="?attr/actionBarSize"
        app:title="ADD FACULTY"
        app:titleMarginStart="25dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mainToolbar">
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <LinearLayout
                android:id="@+id/layout1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background">

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@id/layout1">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="Enter Faculty Name"
                    android:inputType="text"
                    android:background="@drawable/textbox_gradient"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/facultyid"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="Enter Faculty Id"
                    android:inputType="number"
                    android:background="@drawable/textbox_gradient"
                    android:layout_marginBottom="8dp" />
                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="Enter Password"
                    android:background="@drawable/textbox_gradient"
                    android:layout_marginBottom="8dp" />

<!--                <EditText-->
<!--                    android:id="@+id/branch"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="55dp"-->
<!--                    android:hint="Enter Stream"-->
<!--                    android:background="@drawable/textbox_gradient"-->
<!--                    android:layout_marginBottom="8dp" />-->
                <Spinner
                    android:id="@+id/designation"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/textbox_gradient"
                    android:text="Select Usertype"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/btnAddFaculty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Faculty"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:backgroundTint="@color/blue"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="40dp"/>


            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>